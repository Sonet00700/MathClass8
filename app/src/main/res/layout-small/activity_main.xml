<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.sonetmathapp.sagor.mathapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_number"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/editTextIdNumber"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIdNumber"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shreni_baybodhan"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/editTextIdShreniBabodhan"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIdShreniBabodhan"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/elements_are_1"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/editTextIdAllElements"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIdAddElement"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="7"
            android:text="@string/no_of_elements_remain"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewIdRemainNoOfElements"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:text="@string/zero"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnIdMean"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="@string/mean"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIdMedian"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="@string/median"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIdMode"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="@string/mode"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:text="@string/clear"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
